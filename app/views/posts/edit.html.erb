<%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js", "jwysiwyg/jquery/jquery-1.3.2.js", "jwysiwyg/jwysiwyg/jquery.wysiwyg.js" %>
<%= stylesheet_link_tag 'jquery.wysiwyg', 'examples'%>

<script type="text/javascript">
$(function()
{
    $('#wywy').wysiwyg();
});
</script>

<script type="text/javascript">
$(function()
{
    $('#post_body').wysiwyg();
});
</script>

<h1>Editing post</h1>


<div>
  <textarea name="wysiwyg" id="wywy" rows="5" cols="47"></textarea>
</div>

<% form_for(@post) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title, 'Some Title' %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @post %> |
<%= link_to 'Back', posts_path %>